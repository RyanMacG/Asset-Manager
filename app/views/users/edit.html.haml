- provide(:title, "Edit user")
%h1 Update your details
.row
  .span6.offset3
    = form_for (@user) do |f|
      = render 'shared/error_messages', object: f.object
      %fieldset
        %legend User information
        = f.label :name
        = f.text_field :name
        = f.label :email
        = f.text_field :email
      - if current_user.admin?
        %fieldset
          %legend Admin User?
          = f.check_box :admin
      %br/
      = f.submit "Save changes", class: "btn btn-large btn-primary"
