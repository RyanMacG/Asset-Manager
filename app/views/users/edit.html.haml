- provide(:title, "Edit user")
%h1 Update your details
.row
  .span6.offset3
    = form_for (@user) do |f|
      = render 'shared/error_messages', object: f.object
      = f.label :name
      = f.text_field :name
      = f.label :email
      = f.text_field :email
      %br/
      = f.submit "Save changes", class: "btn btn-large btn-primary"
