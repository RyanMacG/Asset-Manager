  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Asset Manager", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %> <!--should change the links at the top if the user is signed in-->
            <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Assets <b class="caret"></b>
